block variables
    - var bodyClass = 'login'

extends layout

block content
    div.centered-wrapper
        div.centered
            div#main-form.col-xs-offset-1.col-xs-10.col-sm-offset-2.col-sm-8.col-md-offset-3.col-md-6
                form.form-horizontal(method="POST")
                    if hasMessages
                        div.alert.alert-danger
                            for error in messages
                                p: center= error

                    div.form-group
                        label.col-sm-4.control-label(for="username")= glMessage('USERNAME_LABEL')
                        div.col-sm-8
                            input.form-control(type="text" name="username")

                    div.form-group
                        label.col-sm-4.control-label(for="password")= glMessage('PASSWORD_LABEL')
                        div.col-sm-8
                            input.form-control(type="password" name="password")

                    div.form-group
                        div.col-sm-offset-4.col-sm-8
                            button.btn.btn-default(type="submit")= glMessage('SIGN_IN_BUTTON')
